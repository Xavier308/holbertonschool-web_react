{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [] // Specify types to include
  },
  "include": [
    "./js/**/*"
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from source files
  ]
}
